{
  "name": "@sebu/infra",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "scripts": {
    "clean": "yarn shared:clean",
    "build": "yarn clean; tsc --build",
    "with_env": "dotenvx run --ignore=MISSING_ENV_FILE -f $PROJECT_CWD/.env -f $INIT_CWD/.env -oe IS_LOCAL=false --",
    "deploy": "yarn with_env sls deploy",
    "migrations:down": "yarn with_env sls invoke --function migrations --data '{\"action\": \"down\"}'",
    "migrations:pending": "yarn with_env sls invoke --function migrations --data '{\"action\": \"pending\"}'",
    "migrations:up": "yarn with_env sls invoke --function migrations --data '{\"action\": \"up\"}'",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "mikro-orm": "NODE_OPTIONS='-r dotenv/config' mikro-orm",
    "source-map-explorer": "source-map-explorer .serverless/build/src/**/*.js",
    "test": "dotenvx run -- jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.716.0",
    "@aws-sdk/client-secrets-manager": "^3.723.0",
    "@codegenie/serverless-express": "^4.16.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^2.1.1",
    "@nestjs/microservices": "^10.4.15",
    "@nestjs/platform-express": "^10.0.0",
    "@sebu/agents": "workspace:^",
    "@sebu/client": "workspace:^",
    "@sebu/communication": "workspace:^",
    "@sebu/db-models": "workspace:^",
    "@sebu/dto": "workspace:^",
    "@sebu/smartcontracts": "workspace:^",
    "ajv": "^8.17.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie": "^1.0.2",
    "date-fns": "^4.1.0",
    "ethers": "^6.13.4",
    "iron-session": "^8.0.4",
    "reflect-metadata": "^0.2.0",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "siwe": "^2.3.2",
    "viem": "^2.22.9"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/aws-lambda": "^8.10.147",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/pg": "^8",
    "@types/supertest": "^6.0.0",
    "@types/ws": "^8",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild-plugin-tsc": "^0.4.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "serverless-domain-manager": "^8.0.0",
    "serverless-offline": "^14.4.0",
    "source-map-explorer": "^2.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
